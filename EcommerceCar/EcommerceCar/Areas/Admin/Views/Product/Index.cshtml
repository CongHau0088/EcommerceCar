@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Product Index - Page";
}<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Table with contextual classes <a href="/admin/product/add"><i class="mdi mdi-plus-circle" style="float:right;font-size: 32px;"></i></a></h4>
                    <p class="card-description">
                        Add class <code>.table-{color}</code>
                    </p>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        First name
                                    </th>
                                    <th>
                                        Product
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Deadline
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var i in ViewBag.data)
                                {
                                    <tr class="table-info">
                                        <td>
                                            @i.Id
                                        </td>
                                        <td>
                                           @i.Name
                                        </td>
                                        <td>
                                            @i.Price
                                        </td>
                                        <td>
                                            @i.Description
                                        </td>
                                        <td>
                                            @foreach(var j in i.Images)
                                            {
                                                <img src="/images/products/@j.Path" />
                                            }
                                            
                                        </td>
                                        <td style="text-align:center">
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@i.Id"><i class="mdi mdi-delete-forever" style="font-size:28px;margin-right: 12px;"></i></a>

                                            <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@i.Id"><i class="mdi mdi-pencil-box" style="font-size:24px"></i></a>
                                        </td>
                                    </tr>
                                }
                                
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>