@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Product Index - Page";
}<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Table with contextual classes <a href="/admin/product/add"><i class="mdi mdi-plus-circle" style="float:right;font-size: 32px;"></i></a></h4>
                    <p class="card-description">
                        Add class <code>.table-{color}</code>
                    </p>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        First name
                                    </th>
                                    <th>
                                        Product
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Deadline
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-info">
                                    <td>
                                        1
                                    </td>
                                    <td>
                                        Herman Beck
                                    </td>
                                    <td>
                                        Photoshop
                                    </td>
                                    <td>
                                        $ 77.99
                                    </td>
                                    <td>
                                        May 15, 2015
                                    </td>
                                    <td style="text-align:center">
                                        <a href="/admin/product/delete" asp-route-id="1"><i class="mdi mdi-delete-forever" style="font-size:28px;margin-right: 12px;"></i></a>

                                        <a href="/admin/product/update" asp-route-id="1"><i class="mdi mdi-pencil-box" style="font-size:24px"></i></a>
                                    </td>
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>